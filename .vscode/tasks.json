{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Book",
            "type": "shell",
            "command": "mdbook build",
            "group": {
				"kind": "build",
				"isDefault": true
			}
        },
        {
            "label": "git-checkout",
            "type": "shell",
            "command": "git checkout develop"
        },
        {
            "label": "git-pull",
            "type": "shell",
            "command": "git pull --rebase"
        },
        {
            "label": "init",
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOn": [
                "git-checkout",
                "git-pull"
            ]
        }
    ]
}